pipeline {
  agent any
  stages {
    stage('Deploy CloudFormation Stack') {
      steps {
        script {
          def stackName = "my-s3-bucket-stack-radha"
          def templateFile = "file://s3-bucket-template.yaml"
          def awsRegion = "us-east-1"

          sh "aws cloudformation create-stack --stack-name ${stackName} --region ${awsRegion}  --template-body ${templateFile}"
          aws cloudformation describe-stack-events --stack-name my-s3-bucket-stack-radha
        }
      }
    }
  }
}

